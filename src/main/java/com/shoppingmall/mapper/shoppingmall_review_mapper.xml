<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="mapper.review">
	<insert id="insert" parameterType="com.shoppingmall.vo.Myshop_reviewVO">
		insert into myshop_review
			values ('r_'||sequ_myshop_review.nextval, #{pid}, #{pname}, #{pcategory_id}, #{id}, #{score}, #{rcontent}, #{rfile}, #{rsfile}, 0, sysdate)
	</insert>
	
	<select id="admin_selectAll" resultType="com.shoppingmall.vo.Myshop_reviewVO">
		select rid, pname, pcategory_id, rcontent, id, score, rfile, recom, to_char(rdate, 'yyyy-mm-dd') rdate
		from myshop_review
	</select>
	<select id="totalcount" resultType="int">
		select count(*) from myshop_review
	</select>
	<delete id="delete" parameterType="java.lang.String">
		delete from myshop_review where rid = #{rid}
	</delete>
	<select id="content" parameterType="java.lang.String" resultType="com.shoppingmall.vo.Myshop_reviewVO">
		select score, id, to_char(rdate, 'yyyy-mm-dd') rdate, rcontent, pname, recom, rsfile from myshop_review where rid = #{rid}
	</select>
</mapper>